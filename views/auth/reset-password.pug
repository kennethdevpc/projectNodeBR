extends ../layout/index


block contenido
  div
    h1.text-3xl.my-15.text-center.font-extrabold Bienes
      sapan.font-normal Raices 
    h2.text-center.text-2xl.font-extrabold #{pagina}
    //h2.text-center.text-2xl.font-extrabold=pagina

    if (errores)
      div(class="mx-auto max-w-md my-10")
       each error in errores 
        p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg


    .mt-3.mx-auto.max-w-md
      .bg-green.py-3.px-4.shadow
         // forma1 usando action
         //form.space-y-5(method="POST" action=`/auth/olvide-password/${token}` noValidate) 
        
         // forma2 pero como va a hacer un post al mismo url se puede quitar el action

         form.space-y-5(method="POST" noValidate)

          input(type="hidden" name="_csrf" value= csrfToken)
          div 
            label.block.text-sm.uppercase.text-gray-500.mb-3.py-3.font-bold(for="password") Tu contraseña
            input#password.w-full.px-3.py-3.border.border-gray-300.rounded-xl.placeholder-green-400(placeholder="Tu password" type="password" name="password")
          div 
            label.block.text-sm.uppercase.text-gray-500.mb-3.py-3.font-bold(for="repetir_password") Repite contraseña
            input#repetir_password.w-full.px-3.py-3.border.border-gray-300.rounded-xl.placeholder-green-400(placeholder="Tu password" type="password" name="repetir_password")

     

          input(class="w-full bg-indigo-600 hover:bg-fuchsia-700 text-white font-bold cursor-pointer py-3" type="submit" value="Guardar password" )

